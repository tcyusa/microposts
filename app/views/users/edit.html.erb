<div class="text-center">
    <h1>Edit profile</h1>
</div>

<div class="row">
    <div class="col-sm-6 offset-sm-3">
        <%= form_with(model: @user, local: true) do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
            
            <div class="form-group">
                <%= f.label :name, 'Name' %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <%= f.label :email, 'Email' %>
                <%= f.text_field :email, class: 'form-control' %>
            </div>
            
            <%= f.submit 'Edit', class: 'btn btn-primary btn-block', class: 'btn btn-primary btn-block' %>
        <% end %>
        
    <div class="mt-3">
        <%= link_to 'Back to profile', user_path, class: 'btn btn-light' %>
    </div>
    
    </div>
</div>